= form_for @document_page do |f|
  - if @document_page.errors.any?
    #error_explanation
      %h2= "#{pluralize(@document_page.errors.count, "error")} prohibited this document_page from being saved:"
      %ul
        - @document_page.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :document
    = f.text_field :document
  .field
    = f.label :page_number
    = f.number_field :page_number
  .field
    = f.label :text
    = f.text_area :text
  .actions
    = f.submit 'Save'
